BoxLayout:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    # First Button (Clear)
    Button:
        text: 'Clear'
        on_press: app.handle_clear()  # Calls handle_clear() in the Python file

    # Second Widget: TextInput (for entering name)
    TextInput:
        id: input_name
        text: ''  # Initially empty text field
        hint_text: 'Enter your name'  # Placeholder text

    # Third Button (Greet)
    Button:
        text: 'Greet'
        on_press: app.handle_greet()  # Calls handle_greet() in the Python file

    # Label under the third button
    Label:
        text: 'Enter your name'
        color: (1, 1, 0, 1)  # Yellow color

    # Label to display greeting (Hello [name])
    Label:
        id: output_label
        text: ''  # Initially empty text
        color: (1, 1, 0, 1)  # Yellow color

